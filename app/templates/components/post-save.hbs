<div class="container">
  <div class="post-body">
    <div class="col-md-6">
      {{post-form save="save" model=model type=type}}
    </div>

    <div class="col-md-6">
      {{#if model.isPresent}}
        <div class="post-preview">
          <h1>{{model.title}}</h1>
          <br>
          {{markdown-to-html markdown=model.body}}
        </div>
      {{else}}
        Post will go here ...
      {{/if}}
    </div>
  </div>
</div>
