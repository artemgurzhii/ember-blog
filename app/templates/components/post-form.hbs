<div class="form-horizontal">
  {{#validated-input model=model valuePath="title"}}
    <label class="col-sm-2 control-label">Title*</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title placeholder="Title" class="form-control" tabindex="1"}}
    </div>
  {{/validated-input}}

  {{#validated-input model=model valuePath="body"}}
    <label class="col-sm-2 control-label">Body*</label>
    <div class="col-sm-10">
      {{textarea value=model.body cols="80" rows="6" class="form-control" tabindex="2" placeholder="Body ..."}}
    </div>
  {{/validated-input}}

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action (route-action "save" model type)}} disabled={{model.validations.isInvalid}} tabindex="3">Save Post</button>
    </div>
  </div>
</div>
