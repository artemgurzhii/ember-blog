<div class="form-horizontal">
  <div class="form-group has-feedback {{if model.isValidTitle 'has-success'}}">
    <label class="col-sm-2 control-label">Title*</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="Title ..." tabindex="1"}}

      {{#if model.isValid}}
        <span class="glyphicon glyphicon-ok form-control-feedback"></span>
      {{/if}}
    </div>
  </div>

  <div class="form-group {{if model.isValidBody 'has-success'}}">
    <label class="col-sm-2 control-label">Body*</label>
    <div class="col-sm-10">
      {{textarea value=model.body cols="80" rows="6" class="form-control" tabindex="2" placeholder="Body ..."}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'save' model}} disabled={{model.isInValid}} tabindex="3">{{title}}</button>
    </div>
  </div>
</div>
