<div class="form-horizontal">
  <div class="form-group has-feedback {{if post.isValidTitle 'has-success'}}">
    <label class="col-sm-2 control-label">Title*</label>
    <div class="col-sm-10">
      {{input type="text" value=post.title class="form-control" placeholder="Title ..." tabindex="1"}}
      {{display-errors errors=errors.post.title showErrors=showErrors}}

      {{#if post.isValid}}
        <span class="glyphicon glyphicon-ok form-control-feedback"></span>
      {{/if}}
    </div>
  </div>

  <div class="form-group {{if post.isValidBody 'has-success'}}">
    <label class="col-sm-2 control-label">Body*</label>
    <div class="col-sm-10">
      {{textarea value=post.body cols="80" rows="6" class="form-control" tabindex="2" placeholder="Body ..."}}
      {{display-errors errors=errors.post.body showErrors=showErrors}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action save post type}} disabled={{post.isInValid}} tabindex="3">Save Post</button>
    </div>
  </div>
</div>
